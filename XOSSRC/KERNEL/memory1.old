FRM mms_newpntr  , 8
FRM mms_newindx  , 4
mms_SIZE=!$$$

2$:	LEAVE
ret024:	RET

movemsect::
	ENTER	mms_SIZE, 0
	MOVL	mms_oldoffset.B[EBP], EDI
	MOVL	mms_oldselect.B[EBP], ESI
	MOVL	mms_newoffset.B[EBP], EDX
	PUSHL	EBP
	MOVL	EBP, 0.B[EBP]
	CALL	knlFindMsect#		;Find new msect MDB
	MOVL	ECX, EBP
	POPL	EBP
	JC	2$.S			;If error
4$:	JE	ermacftlv		;Error if already exists
