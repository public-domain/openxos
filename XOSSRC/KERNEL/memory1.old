	MOVB	BH, mb_data+st_baseh.B[EBP] ;Get linear address of segment
	MOVB	BL, mb_data+st_base+2.B[EBP]
	SHLL	EBX, #16t
	MOVW	BX, mb_data+st_base.B[EBP]
	SUBL	EBP, SS:pdaLdtPnt#
6$:	ADDL	EBX, mdb_base.B[EDI]	;Get linear address for msect
