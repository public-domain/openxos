;	c{EDI} = Offset of MDB
;	CALL	junkmsect
;  c{EAX} is preserved

junkmsect::
	CMPW	BP, #0FFFFFFF8h.B
	JE	2$.S
	ORL	EBP, #04.B		;Make it a local selector
2$:	MOVL	EDX, mdb_base.B[EDI]
	PUSHL	EAX
	CALL	knlFindMsect#		;Yes - find MDB again to restore address
	POPL	EAX			;  of pointer to it!
	JC	6$.S
	JNE	6$.S			;It must be there!!
