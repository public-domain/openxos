	POPL	ES
	JC	ret024.S		;If error (must have a locked page)
	MOVL	EAX, mdb_next.B[EDI]	;Unlink this MDB
	ANDL	EAX, #0FFFFFFh
	ANDL	ES:[EBX], #0FF000000h
	ORL	ES:[EBX], EAX
