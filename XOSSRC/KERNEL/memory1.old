setdesc::
	MOVL	st_base.B[ESI], EDX	;Store low 24 bits of address
	SHRL	EDX, #24t
	MOVB	st_baseh.B[ESI], DL	;Store high 8 bits of address
	MOVW	st_atrb.B[ESI], CX	;Store attributes
	SHRL	ECX, #16t
	MOVW	st_limit.B[ESI], CX	;Store limit value
	ADDL	ESI, #8.B
